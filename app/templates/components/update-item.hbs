<!-- new item form shows on clicking the button -->
{{#if updateForm}}
<div class="">
  <form class="" >
    <div class="form-group">
        <label for="name">Name:</label>
        {{input value=name id="name" class="form-control" placeholder=item.name}}
      </div>
      <div class="form-group">
          <label for="name">description:</label>
          {{input value=description id="description" class="form-control" placeholder=item.description}}
      </div>
      <div class="form-group">
            <label for="name">cost:</label>
            {{input value=cost id="cost" class="form-control" placeholder=item.cost}}
      </div>
      <button {{action 'update' item}} class="btn btn-success">Save</button>
  </form>
</div>
</div>
{{else}}
<button {{action 'updateForm'}} class="btn">Update Item</button>
{{/if}}
